<Window
    x:Class="WeatherChart.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="MainWindow"
    Width="775"
    Height="450">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="51*" />
            <ColumnDefinition Width="724*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="51*" />
            <RowDefinition Height="299*" />
            <RowDefinition Height="31*" />
            <RowDefinition Height="53*"/>
        </Grid.RowDefinitions>
        <Canvas
            x:Name="canvas"
            Grid.RowSpan="4"
            Grid.ColumnSpan="2"
            Background="White">
            <Line
                x:Name="xAxis"
                Stroke="Black"
                X1="50"
                X2="775"
                Y1="350"
                Y2="350" />
            <Line
                x:Name="yAxis"
                Stroke="Black"
                X1="50"
                X2="50"
                Y1="50"
                Y2="350" />
            <TextBlock
                x:Name="xLabel"
                Margin="250,360,0,0"
                FontSize="14"
                Foreground="Black"
                Text="Час" />
            <TextBlock
                x:Name="yLabel"
                Margin="10,10,0,0"
                FontSize="14"
                Foreground="Black"
                Text="Скорость воздуха (м/с)" />
            <!--  Заменяем ItemsControl на StackPanel  -->
            <StackPanel Margin="50,355,0,0" Orientation="Horizontal">
                <!--  Добавляем TextBlock для каждого часа  -->
                <TextBlock
                    Margin="0,0,20,0"
                    FontSize="12"
                    Foreground="Black"
